<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_detail_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Plan"
        android:textColor="#D4EAFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detail_refresh_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/refresh"
        android:src="@android:drawable/ic_popup_sync"
        android:tint="#AEE8FF" />

    <TextView
        android:id="@+id/detail_miles_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_header"
        android:layout_marginTop="2dp"
        android:shadowColor="#CC2AF2FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="--"
        android:textColor="#E8FAFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_miles_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/detail_miles_value"
        android:layout_toEndOf="@id/detail_miles_value"
        android:layout_marginStart="6dp"
        android:text="mi"
        android:textColor="#B9E7FF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/detail_run_type_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_miles_value"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Type: "
            android:textColor="#93A9C0"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_run_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#EAF4FF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_workout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_run_type_row"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout: "
            android:textColor="#93A9C0"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_workout_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="--"
            android:textColor="#EAF4FF"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
